<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:paddingBottom="42dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:fontFamily="serif"
        android:textColor="@android:color/white"
        android:text="Buttonz n' shit"/>

    <LinearLayout
        android:id="@+id/top_answers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/answer_button_1"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="48sp"
                android:textStyle="bold"
                android:text="A"/>

            <TextView
                android:id="@+id/answer_text_1"
                android:layout_width="172dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal"
                android:text="Attractive aardvarks"
                android:textAppearance="?android:textAppearanceMedium"
                android:fontFamily="serif"
                android:textColor="@android:color/white"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/answer_button_2"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="48sp"
                android:textStyle="bold"
                android:text="B"/>

            <TextView
                android:id="@+id/answer_text_2"
                android:layout_width="172dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal"
                android:text="Beautiful bayonets\n(for stabbing)"
                android:textAppearance="?android:textAppearanceMedium"
                android:fontFamily="serif"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_answers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="40dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/answer_button_3"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="48sp"
                android:textStyle="bold"
                android:text="C"/>

            <TextView
                android:id="@+id/answer_text_3"
                android:layout_width="172dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal"
                android:text="Crusty custard"
                android:textAppearance="?android:textAppearanceMedium"
                android:fontFamily="serif"
                android:textColor="@android:color/white"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/answer_button_4"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="48sp"
                android:textStyle="bold"
                android:text="D"/>

            <TextView
                android:id="@+id/answer_text_4"
                android:layout_width="172dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal"
                android:text="Dusty dirtbags of doom"
                android:textAppearance="?android:textAppearanceMedium"
                android:fontFamily="serif"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seek_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:thumbTint="@color/colorPrimaryDark"
            android:max="100"/>

        <TextView
            android:id="@+id/seek_bar_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="serif"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:text="Dusty dirtbags of doom"/>

        <Button
            android:id="@+id/seek_bar_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="Submit"/>

    </LinearLayout>


</LinearLayout>